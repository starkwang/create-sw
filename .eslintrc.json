{
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "indent": ["error", 2],
        "semi": ["error", "never"],
        "no-console": ["error", { "allow": ["log", "warn", "error"] }],
        "comma-dangle": ["error", "never"],
        "arrow-body-style": ["error", "as-needed"]
    }
}